{{ form_start(form) }}
    {# Etiquettes du panel #}
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a id="navInformations" class="nav-link active" aria-current="page" data-bs-toggle="tab" data-bs-target="#Informations" type="button" role="tab" aria-controls="Informations" aria-selected="true"><h5><i class="fa-duotone fa-memo-circle-info"></i> Informations</h5></a>
        </li>
        <li class="nav-item">
            <a id="navCustomers" class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Customers" type="button" role="tab" aria-controls="Vendeurs" aria-selected="true"><h5><i class="fa-duotone fa-user-tie-hair"></i> Vendeurs</h5></a>
        </li>
        <li class="nav-item">
            <a id="navEstimate" class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Estimate" type="button" role="tab" aria-controls="Estimations" aria-selected="true"><h5>Chiffres</h5></a>
        </li>
        <li class="nav-item">
            <a id="navOptions" class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Options" type="button" role="tab" aria-controls="Complements" aria-selected="true"><h5>Complements</h5></a>
        </li>
        <li class="nav-item">
            <a id="navGallery" class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Gallery" type="button" role="tab" aria-controls="Galerie" aria-selected="true"><h5><i class="fa-duotone fa-gallery-thumbnails"></i> Galerie</h5></a>
        </li>
        <li class="nav-item">
            <a id="navPublication" class="nav-link" aria-current="page" data-bs-toggle="tab" data-bs-target="#Publication" type="button" role="tab" aria-controls="Publication" aria-selected="true"><h5><i class="fa-duotone fa-browser"></i> Publication</h5></a>
        </li>
    </ul>


    {# Div's du panel #}
    <div class="tab-content">
        {# Panel INFORMATIONS #}
        <div class="tab-pane active" id="Informations" role="tabpanel" aria-labelledby="home-tab">
            <div class="row mt-2">
                <div class="col-sm-8">
                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.name, '', {'label_attr': {'class':'col-sm-2 col-form-label'}}),
                        'form_input':form_widget(form.name, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Titre du bien'}})
                    }
                    %}
                </div>
                <div class="col-sm-4">
                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.ref, '', {'label_attr': {'class':'col-sm-2 col-form-label'}}),
                        'form_input':form_widget(form.ref, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Référence du bien'}})
                    }
                    %}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8">
                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.adress, '', {'label_attr': {'class':'col-sm-2 col-form-label'}}),
                        'form_input':form_widget(form.adress, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Adresse'}})
                    }
                    %}

                    {% include('include/form/input.html.twig') with {
                        'form_input':form_widget(form.complement, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Complément'}})
                    }
                    %}

                    {% include('include/form/input2field.html.twig') with {
                        'form_label':form_label(form.city, '', {'label_attr': {'class':'col-sm-2 col-form-label'}}),
                        'form_input1':form_widget(form.zipcode, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'CP'}}),
                        'form_input2':form_widget(form.city, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Commune'}})
                    }
                    %}
                </div>
                <div class="col-sm-4">

                </div>
            </div>
            <div class="row">
                <div class="col-sm-8">

                    {% include('include/form/textarea.html.twig') with {
                        'form_label':form_label(form.annonce, '', {'label_attr': {'class':'col-sm-2 col-form-label'}}),
                        'form_text':form_widget(form.annonce, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Description'}})
                    }
                    %}

                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.piece, '', {'label_attr': {'class':'col-sm-2 col-form-label'}}),
                        'form_input':form_widget(form.piece, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'0'}})
                    }
                    %}

                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.room, '', {'label_attr': {'class':'col-sm-2 col-form-label'}}),
                        'form_input':form_widget(form.room, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'0'}})
                    }
                    %}
                </div>
                <div class="col-sm-4">
                    {% include('include/form/oneSwitch.html.twig') with {
                        'form_label':form_label(form.isHome, '', {'label_attr': {'class':'form-check-label'}}),
                        'form_switch':form_widget(form.isHome, {'attr': {'class': 'form-check-input'}})
                    }
                    %}

                    {% include('include/form/oneSwitch.html.twig') with {
                        'form_label':form_label(form.isApartment, '', {'label_attr': {'class':'form-check-label'}}),
                        'form_switch':form_widget(form.isApartment, {'attr': {'class': 'form-check-input'}})
                    }
                    %}

                    {% include('include/form/oneSwitch.html.twig') with {
                        'form_label':form_label(form.isLand, '', {'label_attr': {'class':'form-check-label'}}),
                        'form_switch':form_widget(form.isLand, {'attr': {'class': 'form-check-input'}})
                    }
                    %}

                    {% include('include/form/oneSwitch-input.html.twig') with {
                        'form_label':form_label(form.isOther, '', {'label_attr': {'class':'form-check-label'}}),
                        'form_switch':form_widget(form.isOther, {'attr': {'class': 'form-check-input'}}),
                        'form_input':form_widget(form.otherDescription, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Autres'}})
                    }
                    %}

                </div>
            </div>
        </div>
        <div class="tab-pane" id="Customers" role="tabpanel" aria-labelledby="profile-tab">
            {{ render(controller('App\\Controller\\Gestapp\\CustomerController::listByProperty', {'property' : idProperty})) }}
        </div>
        <div class="tab-pane" id="Estimate" role="tabpanel" aria-labelledby="profile-tab">
            <div class="row mt-1">
                <div class="col-sm-6">
                    {% include('include/form/input-numerique.html.twig') with {
                        'form_label':form_label(form.surfaceLand, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.surfaceLand, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Email'}})
                    }
                    %}

                    {% include('include/form/input-numerique.html.twig') with {
                        'form_label':form_label(form.surfaceHome, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.surfaceHome, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Titre du bien'}})
                    }
                    %}
                </div>
                <div class="col-sm-6">
                    {% include('include/form/date.html.twig') with {
                        'form_label':form_label(form.dpeAt, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.dpeAt, {'attr': {'class': 'form-control form-control-sm flatpickr'}})
                    }
                    %}

                    {% include('include/form/input-numerique.html.twig') with {
                        'form_label':form_label(form.diagDpe, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.diagDpe, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Titre du bien'}})
                    }
                    %}

                    {% include('include/form/input-numerique.html.twig') with {
                        'form_label':form_label(form.diagGpe, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.diagGpe, {'attr': {'class': 'form-control form-control-sm', 'placeholder':'Titre du bien'}})
                    }
                    %}

                </div>
            </div>
            <div class="row mt-1">
                <div class="col-sm-6">
                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.notaryEstimate, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.notaryEstimate, {'attr': {'class': 'form-control form-control-sm'}})
                    }
                    %}

                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.applicantEstimate, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.applicantEstimate, {'attr': {'class': 'form-control form-control-sm'}})
                    }
                    %}
                </div>
                <div class="col-sm-6">
                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.cadasterZone, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.cadasterZone, {'attr': {'class': 'form-control form-control-sm'}})
                    }
                    %}

                    {% include('include/form/input-numerique.html.twig') with {
                        'form_label':form_label(form.cadasterNum, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.cadasterNum, {'attr': {'class': 'form-control form-control-sm'}})
                    }
                    %}

                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.cadasterSurface, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.cadasterSurface, {'attr': {'class': 'form-control form-control-sm'}})
                    }
                    %}

                    {% include('include/form/input.html.twig') with {
                        'form_label':form_label(form.cadasterCariez, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
                        'form_input':form_widget(form.cadasterCariez, {'attr': {'class': 'form-control form-control-sm'}})
                    }
                    %}

                </div>
            </div>
        </div>
        <div class="tab-pane" id="Options" role="tabpanel" aria-labelledby="profile-tab">
            {{ render(controller('App\\Controller\\Gestapp\\ComplementController::Edit', {'id' : complement})) }}
        </div>
        <div class="tab-pane" id="Gallery" role="tabpanel" aria-labelledby="profile-tab">
        </div>
        <div class="tab-pane" id="Publication" role="tabpanel" aria-labelledby="profile-tab">
            {{ render(controller('App\\Controller\\Gestapp\\PublicationController::showByProperty', {'id' : publication})) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <div class="row mt-2">
        <div class="col-sm-12">
            <a id="stepBack" href="{{ path('op_gestapp_property_index') }}" class="btn btn-sm btn-outline-dark"><i class="fa-solid fa-backward-step"></i> Retour</a>
            <a id="stepInformations" href="{{ path('op_gestapp_property_stepinformations', {'id': idProperty}) }}" class="btn btn-sm btn-outline-primary">Valider et passer à l'étape Vendeurs <i class="fa-duotone fa-forward-step"></i></a>
            <a id="stepCustomers" class="btn btn-sm btn-outline-primary">Valider et passer à l'étape Estimation <i class="fa-duotone fa-forward-step"></i></a>
            <a id="stepEstimate" href="{{ path('op_gestapp_property_stepchiffres', {'id': idProperty}) }}" class="btn btn-sm btn-outline-primary">Valider et passer à l'étape Options <i class="fa-duotone fa-forward-step"></i></a>
            <a id="stepOptions" class="btn btn-sm btn-outline-primary">Valider et passer à l'étape Galerie <i class="fa-duotone fa-forward-step"></i></a>
            <a id="stepGallery" class="btn btn-sm btn-outline-primary">Valider et passer à l'étape Publication <i class="fa-duotone fa-forward-step"></i></a>
            <a id="stepPublication" href="{{ path('op_gestapp_property_steppublication', {'id': idProperty}) }}" class="btn btn-sm btn-outline-primary">Valider la publication et finaliser l'ajout <i class="fa-duotone fa-forward-step"></i></a>
        </div>
    </div>

{{ form_end(form) }}
