    <div class="mb-1">
        {% include('include/form/select.html.twig') with {
            'form_label':form_label(form.banner, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
            'form_select':form_widget(form.banner)
        }
        %}
    </div>
    <div class="mb-1">
        {% include('include/form/select.html.twig') with {
            'form_label':form_label(form.denomination, '', {'label_attr': {'class':'col-sm-4 col-form-label'}}),
            'form_select':form_widget(form.denomination)
        }
